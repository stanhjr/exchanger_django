server {
    listen 80;
    server_name *****;

    location /favicon.svg {
        root /home/exchanger_django/favicon.svg;
    }

    location /static/ {
        root /home;
    }

    location /api {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    location / {
        root /home/nex-vue3/dist;
        try_files $uri  /index.html;
    }
}