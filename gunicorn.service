[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/home/exchanger_django
ExecStart=/home/exchanger_django/venv/bin/gunicorn --workers 3 --bind unix:/run/gunicorn.sock exchanger_django.wsgi:application

[Install]
WantedBy=multi-user.target